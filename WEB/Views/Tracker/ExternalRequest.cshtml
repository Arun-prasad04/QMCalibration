@{
    ViewData["Title"] = "External Request";
}
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
    <section class="content">
        <div class="row">
            <div class="col-12">

                <div class="card card-primary">
                    <div class="card-header">
                        <div class="row">
                       <div class="col-md-6">
                            <h3 class="card-title">Tracker List</h3>
                    </div>
                    <div class="col-md-6 text-right">
 
                    </div> 

                       </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                   
                                    <th>Request No</th>
                                    <th>Request Date</th>
                                    <th>Master Name</th>
                                    <th>Master Serial</th>
                                    <th>Calibration Date</th>
                                    <th>Due Date</th>
                                    <th>Status</th>
                                    <th>View</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {

                                    <tr>
                                        <td>@item.ReqNo</td>
                                        <td>@item.RequestDate.ToString("dd-MM-yyyy")</td>
                                        <td>@item.MasterName</td>
                                        <td>@item.MasterSerialNo</td>
                                        <td>@item.CalibrationDate.ToString("dd-MM-yyyy")</td>
                                        <td>@item.NextDue.ToString("dd-MM-yyyy")</td>
                                        @if(@item.Status==(int)EnumRequestStatus.Requested)
                                        {
                                            <td>Requested</td>
                                        }
                                        else if(@item.Status==(int)EnumRequestStatus.Approved){
                                            <td>Approved</td>
                                        }else if(@item.Status==(int)EnumRequestStatus.Rejected){
                                            <td>Rejected</td>
                                        }else if(@item.Status==(int)EnumRequestStatus.Sent){
                                            <td>Sent</td>
                                        }else if(@item.Status==(int)EnumRequestStatus.Closed){
                                            <td>Closed</td>
                                        }
                                        <td><i class="fas fa-eye" style="cursor:pointer" id='@item.Id' onclick="GetExternalRequestDetails(this)"></i></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
<script>
setTimeout(function(){ 

$('#ReturnDatePicker').datetimepicker({
      format: 'DD/MM/YYYY'
});
    

$("#example1").DataTable({
      "paging": true,
      "lengthChange": true,
      "searching": true,
      "ordering": true,
      "info": true,
      "autoWidth": true,
      "responsive": true,
});
}, 500);
</script>

