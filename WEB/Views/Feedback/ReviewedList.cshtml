<style>
    .dropdown {
        margin-left: 450px;
    }
</style>

<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card card-primary">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <h3 class="card-title">Reviewed List</h3>
                        </div>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="tblFeedbackList" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Short Id</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Email Id</th>
                                <th>Mobile Number</th>
                                <th>Department</th>
                                <th>Feedback Status</th>
                                <th>View</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ShortId</td>
                                    <td>@item.FirstName</td>
                                    <td>@item.LastName</td>
                                    <td>@item.Email</td>
                                    <td>@item.MobileNo</td>
                                    <td>@item.DepartmentName</td>
                                    <td>Reviewed</td>
                                    <td> <a href='@Url.Action("Index","Feedback", new { FeedbackInviteId = @item.Id  } )'><i class="fas fa-eye" style="cursor:pointer"></i></a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->

</section>
<script>
    setTimeout(function () {

        $("#tblFeedbackList").DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": true,
            "responsive": true,
        });
    }, 500);
</script>

<script>
    function siteRedirect() {
        var selectbox = document.getElementById("select-id");
        var selectedValue = selectbox.options[selectbox.selectedIndex].value;
        window.location.href = selectedValue;
    }

    function viewFeedbackForm(inviteId) {
        alert("Invite Feedback Id" + inviteId);
    }
</script>