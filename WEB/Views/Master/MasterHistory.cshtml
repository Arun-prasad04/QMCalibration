@{
    ViewData["Title"] = "Master History-Breakdown List";
}
    <section class="content">
        <div class="row">
            <div class="col-12">

                <div class="card card-primary"> 
                    <div class="card-header">
                        <div class="row">
                       <div class="col-md-6">
                            <h3 class="card-title trn">Master History - Breakdown List</h3>
                    </div>
                    <div class="col-md-6 text-right">
                        <a href='@Url.Action("MasterHistoryCreate","Master",new {MasterId=@ViewBag.MasterId})'><input type="button" class="btn btn-sm btn-default" value="Create Master History" ></a>
                        <a href='@Url.Action("Index","Master")'><input type="button" class="btn btn-sm btn-default" value="Go to Master" ></a>
                    </div>
 
                       </div>  
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                <th class="trn">Serial No</th>
                                <th class="trn">Date</th>
                                <th class="trn">Category</th>
                                <th class="trn">Description</th>
                                <th class="trn">Actions Taken / Calibration Results</th>
                                <th class="trn">From</th>
                                <th class="trn">To</th>
                                <th class="trn">Date of Completion</th>
                                <th class="trn">Breakdown Hrs/Days</th>
                                <th class="trn">Status</th>
                                <th class="trn">Maintenance / Supplier Representative</th>
                                <th class="trn">Updated By</th>
                            </thead>
                            <tbody>
                                @{
                                    int Sno=1;
                                
                                foreach (var item in Model)
                                {
                                    <tr >
                                        <td>@Sno</td>
                                        <td>@item.Date</td>
                                        <td>@item.Category</td>
                                        <td>@item.Description</td>
                                        <td>@item.Actions_Taken</td>
                                        <td>@item.FromDate</td>
                                        <td>@item.ToDate</td>
                                        <td>@item.Date_of_Completion</td>
                                        <td>@item.Breakdown_hrs_days</td>
                                        <td>@item.Status</td>
                                        <td>@item.Maintainence</td>
                                        <td>@item.CreatedBy</td>                                        
                                    </tr>
                                    Sno=Sno+1;
                                }
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
<script>
     setTimeout(function(){ 

      $("#example1").DataTable({
      "paging": true,
      "lengthChange": true,
      "searching": true,
      "ordering": true,
      "info": true,
      "autoWidth": true,
      "responsive": true,
    });
        Conversion();
     }, 500);
    </script>