@{
	ViewData["Title"] = "Tool Room Instrument List";
}
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
<script src="~/js/3.3.1Version/jquery.min.js"></script>

<section class="content">
	<div class="row">
		<div class="col-12">

			<div class="card card-primary">
				<div class="card-header">
					<div class="row">
						<div class="col-md-6">
							<h3 class="card-title trn">Tool Room Instruments List</h3>
						</div>
						

					</div>
				</div>
	

				<!-- /.card-header -->
				<div class="card-body">
					<table id="tblToolInstruments" class="table table-bordered table-striped" style="width:100%">
						<thead>
							<tr>
								<th class="trn">Instrument Name</th>
								<th class="trn">Serial Number</th>
								<th class="trn">Lab ID Number</th>
								<th class="trn">Range</th>
								<th class="trn">Department</th>
								<th class="trn">SubSectionCode</th>
								<th class="trn">Scope</th>
								<th class="trn">Calibration Date</th>
								<th class="trn">DueDate</th>
								@* <th class="trn">Edit</th> *@
								<!--<th>Delete</th>-->
								@* @* @if (@HttpContextAccessor.HttpContext.Session.GetString("UserRoleId") == "1")
								{ *@ 
									@*<th class="trn">Request</th>*@
									@* <input id="instrumentId" name="instrumentId" type="checkbox" value=' + item.id + ' checked="checked" /> *@
									@* <th style="text-align:center;">
										<span class="trn">SelectAll Request</span>
										<br>
										<input type="checkbox" id="selectAll" name="selectAll" />
									</th> *@

								@* } *@
								@* <th class="trn">Quarantine</th> *@
							</tr>
						</thead>
						<tbody>

							@foreach (var item in Model)
							{
								@* @if ((@item.RequestStatus != 28 && @item.ToolInventoryStatus != 2) || (@item.RequestStatus != 30 && @item.ToolInventoryStatus != 2))
								{ *@
									<tr>
										<td class="trn one">@item.InstrumentName</td>
										<td class="trn">@item.SlNo</td>
										<td class="trn">@item.IdNo</td>
										<td class="trn">@item.Range</td>
										<td class="trn">@item.DepartmentName</td>
										<td class="trn">@item.SubSectionCode</td>
										<td class="trn">@item.TypeOfEquipment</td>
										<td class="trn">@item.CalibDate.ToString("dd-MM-yyyy")</td>
										@if (item.DueDate == null)
										{
											<td> </td>
										}
										else
										{
											<td>@item.DueDate.ToString("dd-MM-yyyy")</td>
										}

									</tr>

								@* } *@
							}
						</tbody>
					</table>
				</div>

				
				<!-- /.card-body -->
			</div>
			<!-- /.card -->
		</div>
		<!-- /.col -->
	</div>
	<!-- /.row -->
</section>
