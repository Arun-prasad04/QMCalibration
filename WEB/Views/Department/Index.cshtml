@{
	ViewData["Title"] = "Department List";
}
<section class="content">
	<div class="row">
		<div class="col-12">

			<div class="card card-primary">
				<div class="card-header">
					<div class="row">
						<div class="col-md-6">
							<h3 class="card-title trn">Department List</h3>
						</div>
						<div class="col-md-6 text-right">
							<a href='@Url.Action("Create","Department")'><input type="button" class="btn btn-sm btn-default trn" value="New Department"></a>
						</div>

					</div>
				</div>
				<!-- /.card-header -->
				<div class="card-body">
					<table id="example1" class="table table-bordered table-striped Lagtab">
						<thead>
							<tr>
								<th class="trn">Plant Location</th>
								<th class="trn">Plant Code</th>
								<th class="trn">Department</th>
								@*<th class="trn">Department Desc</th>*@
								<th class="trn">Department Code</th>

								<th class="trn">Section</th>
								<th class="trn">Section Code</th>
								<th class="trn">Sub Section</th>
								<th class="trn">Sub Section Code</th>


								<th class="trn">Created Date</th>

								<th class="trn">Edit</th>
								<!--<th>Delete</th>!-->
							</tr>
						</thead>
						<tbody>

							@foreach (var item in Model)
							{
								<tr>


									<td>@item.PlantLocation</td>
									<td>@item.PlantCode</td>
									<td>@item.Name</td>
									@*<td>@item.Description</td>*@
									<td>@item.DeptCode</td>
									<td>@item.Section</td>
									<td>@item.SectionCode</td>
									<td>@item.SubSection</td>
									<td>@item.SubSectionCode</td>

									<td>@item.CreatedOn.ToString("dd-MM-yyyy")</td>

									<td><a href='@Url.Action("DepartmentEdit","Department",new {departmentId=@item.Id})'><i class="fas fa-edit"></i></a></td>
									<!--<td><a href='@Url.Action("DepartmentDelete","Department",new {departmentId=@item.Id})'><i class="fas fa-archive"></i></a></td>!-->
								</tr>
							}
						</tbody>
					</table>
				</div>
				<!-- /.card-body -->
			</div>
			<!-- /.card -->
		</div>
		<!-- /.col -->
	</div>
	<!-- /.row -->
</section>
<script>
	setTimeout(function () {

		$("#example1").DataTable({
			"paging": true,
			"lengthChange": true,
			"searching": true,
			"ordering": true,
			"info": true,
			"autoWidth": true,
			"responsive": true,
		});
		//var translator = $('body').translate({ lang: language, t: dict });
		Conversion();
	}, 500);
</script>