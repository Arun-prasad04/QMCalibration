<style>
    table,
    th,
    tr,
    td {
        border: 0.5px solid black;
        text-align: center;
        border-collapse: collapse;
    }
    .wd100{
        width: 100%;
    }
    .wd100ht40{
        width: 100%;
        height: 40px;
    }
    .ht40{
        height: 40px;
    }
    .ht80{
        height: 80px;
    }
    .wd100ht80{
        width: 100%;
        height: 80px;
    }
    .row {
        display: flex;

        margin-left: 2px;

        margin-right: 2px;
    }
    .column {

        flex: 50%;    
    }
    .wd100ht160{
        width: 100%;
        height: 160px;
    }
    
</style>
<table class="wd100">
    <tr class="sizeborder">
        <th  rowspan="2">Daimler</th>
        <th  rowspan="2">Alternative Method Of Calibration</th>
        <th>Format No.</th>
        <td><input type="text" value="@Model.Format" class="wd100"></td>
    </tr>
    <tr>
        <th>RevNo & Date</th>
        <td><input type="text" value="@Model.RevNoAndDate" class="wd100"></td>
    </tr>
</table >
<br><br>
<table class="wd100">
    <tr>
        <th>Instrument/Gauge</th>
        <td><input type="text" value="@Model.Instrument" class="wd100"></td>
        <th>Instrument/Gauge ID</th>
        <td><input type="text" value="@Model.InstrumentId" class="wd100"></td>
    </tr>
      <tr>
        <th>Range/size</th>
        <td><input type="text" value="@Model.RangeSize" class="wd100"></td>
        <th>Least Count</th>
        <td><input type="text" value="@Model.LeastCount" class="wd100"></td>
    </tr>
    <tr>
        <th colspan="4" class="ht40">Master Equipment Details</th>    
    </tr>
    <tr>
        <th colspan="2" class="ht40">Equipment-1</th>
        <th colspan="2" class="ht40">Equipment-2</th>
    </tr>
    <tr>
        <th>Name</th>
        <td><input type="text" value="@Model.Equipment1.Name" class="wd100"></td>
        <th>Name</th>
        <td><input type="text" value="@Model.Equipment2.Name" class="wd100"></td>
    </tr>
    <tr>
        <th>Equipment ID</th>
        <td><input type="text" value="@Model.Equipment1.EquipmentID" class="wd100"></td>
        <th>Equipment ID</th>
        <td><input type="text" value="@Model.Equipment2.EquipmentID" class="wd100"></td>
    </tr>
    <tr>
        <th> Date Of Calibration</th>
        <td><input type="text" value="@Model.Equipment1.CalibDate" class="wd100"></td>
        <th>Date Of Calibration </th>
        <td><input type="text" value="@Model.Equipment2.CalibDate" class="wd100"></td>
    </tr>
</table> <br>
<div class="row">

    <div class="column">
        <table class="wd100">
            <tr>
                <th class="ht40">Measurement Values</th>
                <th class="ht40">MUx</th>
            </tr>
            @foreach (var item in @Model.Values1)
            {
            <tr>
                <td><input type="text" value="@item.inp1" class="wd100"></td>
                <td rowspan="5"><input type="text" value="@Model.MUx" class="wd100ht160"></td>
            </tr>
            <tr>
                <td><input type="text" value="@item.inp2" class="wd100"></td>
            </tr>
             <tr>
                <td><input type="text" value="@item.inp3" class="wd100"></td>
            </tr>
             <tr>
                <td><input type="text" value="@item.inp4" class="wd100"></td>
            </tr>
             <tr>
                <td><input type="text" value="@item.inp5" class="wd100"></td>
            </tr>
            }
        </table>
    </div>
    <div class="column">
          <table class="wd100">
            <tr>
                <th class="ht40">Measurement Values</th>
                <th class="ht40">MUx</th>
            </tr>
             @foreach (var item in @Model.Values2)
                {
            <tr>
                <td><input type="text" value="@item.inp1" class="wd100"></td>
                <td rowspan="5"><input type="text" value="@Model.MUX" class="wd100ht160"></td>
            </tr>
            <tr>
                <td><input type="text" value="@item.inp2" class="wd100"></td>
            </tr>
             <tr>
                <td><input type="text" value="@item.inp3" class="wd100"></td>
            </tr>
             <tr>
                <td><input type="text" value="@item.inp4" class="wd100"></td>
            </tr>
             <tr>
                <td><input type="text" value="@item.inp5" class="wd100"></td>
            </tr>
                }
        </table>
    </div>
</div> <br>
<table class="wd100">
    <tr>
        <th>“x” (Equipment 1) Value AVg</th>
        <td><input type="text" value="@Model.Equipment1.AvgValues" class="wd100"></td>
        <th>“X” (Equipment 2) Value Avg</th>
        <td><input type="text" value="@Model.Equipment2.AvgValues" class="wd100"></td>
    </tr>
    <tr>
        <th>U Lab (Eq 1) – Measurement Uncertainty</th>
        <td><input type="text" value="@Model.Equipment1.Uncertainity" class="wd100"></td>
        <th>U2 Lab (Eq 1)</th>
        <td><input type="text" value="@Model.Equipment1.Ulab" class="wd100"></td>
    </tr>
     <tr>
        <th>U Lab (Eq 2) – Measurement Uncertainty</th>
        <td><input type="text" value="@Model.Equipment1.Uncertainity" class="wd100"></td>
        <th>U2 Lab (Eq 2)</th>
        <td><input type="text" value="@Model.Equipment2.Ulab" class="wd100"></td>
    </tr>
    <tr>
        <th>MU Claimed for NABL</th>
        <td colspan="3"><input type="text" value="@Model.NABL" class="wd100"></td>
    </tr>

    <tr>
        <th class="ht80">
            En Value <br>
            Acceptance Criteria :<=1
        </th>
        <td class="ht80" colspan="3"><input type="text" value="@Model.EnValue" class="wd100ht80"></td>
    </tr>
    <tr>
        <th class="ht40">Conclusion</th>
        <td class="ht40" colspan="3"><input type="text" value="@Model.Conclusion" class="wd100ht40"></td>
    </tr>
</table> <br>
<table class="wd100">
     <tr>
        <th class="ht40">Evaluated By</th>
        <td class="ht40"><input type="text" value="@Model.EvaluatedBy" class="wd100ht40"></td>
    </tr>
     <tr>
        <th class="ht40">Date</th>
        <td class="ht40"><input type="text" value="@Model.EvalDate" class="wd100ht40"></td>
    </tr>
</table>