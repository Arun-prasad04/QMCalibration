<section class="content">
    <div class="row">
        <div class="col-12">

            <div class="card card-primary">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <h3 class="card-title">Intermediate Data List </h3>
                        </div>
                        <div class="col-md-6 text-right">
                            <a href='@Url.Action("QCIntermediateTemplate","QCIntermediateTemplate")'><input
                                    type="button" class="btn btn-sm btn-default"
                                    value="Add New Intermediate Data"></a>
                        </div>

                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Equipment Name</th>
                                <th>Range</th>
                                <th>Least Count</th>
                                <th>Master Equipment</th>
                                <th>Accuracy Equipment Name</th>
                                <th>Study Performed by</th>
                                <th>Study Performed Date</th>
                                <th>Document Status</th>
                                <th>View</th>

                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.EquipmentName1</td>
                                        <td>@item.RangeOrSize1</td>
                                        <td>@item.LeastCount1</td>
                                        <td>@item.EquipmentName2</td>
                                        <td>@item.EquipmentName3</td>
                                        <td>@item.StudyPerformedByName</td>
                                        <td>@item.SignDate.ToString("dd-MM-yyyy")</td>
                                        <td>@item.Status</td>
                                        <td> <a href='@Url.Action("QCIntermediateTemplate","QCIntermediateTemplate", new { IntermediateId= @item.Id } )'><i class="fas fa-eye" style="cursor:pointer"></i></a></td>         
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<script>
    setTimeout(function () {

        $("#example1").DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": true,
            "responsive": true,
        });
    }, 500);
</script>